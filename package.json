{
  "name": "devcontainer-enforcer",
  "displayName": "DevContainer Enforcer",
  "description": "Alert-only guard for Dev Containers with ancestor .devcontainer lookup.",
  "version": "0.2.0",
  "publisher": "UltraMegaApps",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "categories": [
    "Other"
  ],
  "private": true,
  "galleryBanner": {
    "color": "#0ea5e9",
    "theme": "dark"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "keywords": [
    "devcontainer",
    "development",
    "container",
    "enforcer",
    "vscode"
  ],
  "scripts": {
    "dev": "tsc -w --noEmit false --outDir out --sourceMap true",
    "build": "tsc",
    "esbuild": "npm run typecheck && node esbuild.mjs",
    "typecheck": "tsc --noEmit",
    "package": "bash ./production-build.sh UltraMegaApps",
    "publish": "cd dist && npx --yes @vscode/vsce publish minor"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.6.1",
    "@resvg/resvg-js": "^2.6.2",
    "esbuild": "^0.25.10",
    "javascript-obfuscator": "^4.1.1",
    "typescript": "^5.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ultra-mega-apps/devcontainer-enforcer-free.git"
  }
}
